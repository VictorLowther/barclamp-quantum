[DATABASE]
sql_connection = <%= @ovs_sql_connection %>
reconnect_interval = 2

[OVS]
intergration_bridge = br-int
bridge_mappings = physnet1:br-fixed
tenant_network_type = <%= @networking_mode %>
<% case @networking_mode -%>
<% when "gre" -%>
enable_tunneling = True
tunnel_id_ranges = <%= @gre_tunnel_id_range %>
tunnel_bridge = br-fixed
local_ip = <%= @fixed_ip %>
<% when "vlan" -%>
network_vlan_ranges = physnet1:<%= @vlan_start %>:<%= @vlan_end %>
<% when "local" -%>
tenant_network_type = "local"
<% when "flat" -%>
tenant_network_type = "flat"
<% end -%>

[AGENT]
polling_interval = 2
root_helper = sudo <%= @rootwrap %> /etc/quantum/rootwrap.conf
